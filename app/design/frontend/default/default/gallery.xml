<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
    </default>
    <gallery_index_index>
    </gallery_index_index>
    <gallery_album_view>
    	<reference name="head">
		<action method="addJs"><script>jquery/jquery-1.4.4.min.js</script></action>
    		<action method="addJs"><script>jquery/jquery.galleria.js</script></action>
			<action method="addCss"><stylesheet>css/galleria.css</stylesheet></action>
    	</reference>
    	<reference name="root">    		
    		<action method="setTemplate"><template>page/1column.phtml</template></action>
    		<block type="gallery/gallery" name="breadcrumbs" template="gallery/breadcrumbs.phtml" />
    	</reference>    
    	<reference name="content">
    		<block type="gallery/gallery" name="gallery" template="gallery/galleria.phtml" />
    	</reference>
    </gallery_album_view>
</layout> 
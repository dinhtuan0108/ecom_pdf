				<templates translate="label">
                    <label>PageParts</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>270</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <html translate="label">
                            <label>Templates</label>
                            <frontend_model>auit_editor/adminhtml_templates</frontend_model>
                            <backend_model>auit_editor/adminhtml_arraytemplate</backend_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                        </html>
					</fields>
                </templates>
				<styles translate="label">
                    <label>StylisticSets</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>280</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <style translate="label">
                            <label>Styles</label>
                            <frontend_model>auit_editor/adminhtml_styles</frontend_model>
                            <backend_model>auit_editor/adminhtml_arraytemplate</backend_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                        </style>
					</fields>
                </styles>
				<blocksdefinition translate="label">
                    <label>Additional Blocks</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>380</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <reference translate="label">
                            <label>Reference</label>
                            <frontend_model>auit_editor/adminhtml_blockreference</frontend_model>
                            <backend_model>auit_editor/adminhtml_arraytemplate</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <comment>Please use only blocks extends from type 'core/text_list'</comment>
                        </reference>
                        <templates translate="label">
                            <label>Templates</label>
                            <frontend_model>auit_editor/adminhtml_blocktemplates</frontend_model>
                            <backend_model>auit_editor/adminhtml_arraytemplate</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                        </templates>
					</fields>
                </blocksdefinition>
				<menudefinition translate="label">
                    <label>Additional Menus</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>480</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <reference translate="label">
                            <label>Reference</label>
                            <frontend_model>auit_editor/adminhtml_blockreference</frontend_model>
                            <backend_model>auit_editor/adminhtml_arraytemplate</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
							<comment>Please use only blocks extends from type 'page/template_links'</comment>
                        </reference>
					</fields>
                </menudefinition>
				<speciallinks translate="label">
                    <label>Special links</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>580</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <reference translate="label">
                            <label>Defintion</label>
                            <frontend_model>auit_editor/adminhtml_speciallinks</frontend_model>
                            <backend_model>auit_editor/adminhtml_arraytemplate</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
							<comment><![CDATA[
							Sample 1:<br/>
							comment: link to My Account<br/>
							menu: Customer<br/>
							link: {{store url='customer/account'}}<br/>
							label: My Account<br/>
							modul: customer<br/>
							Sample 2:<br/>
							menu: Favorite/Websites<br/>
							comment: link to google.com<br/>
							link: http://www.google.com<br/>
							label: www.google.de<br/>
							modul: <br/>
							]]></comment>
                        </reference>
					</fields>
                </speciallinks>
                
            </groups>
        </auit_editor>
    </sections>
</config>

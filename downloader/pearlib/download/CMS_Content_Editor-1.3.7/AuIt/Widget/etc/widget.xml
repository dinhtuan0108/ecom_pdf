<?xml version="1.0"?>
<widgets>
    <auit_widget_youtube_direct type="auit_widget/youtube_direct">
        <name>SNM-Portal: Youtube Direct</name>
        <description type="desc">Add youtube video from a Video ID</description>
        <snm_editor>
        	<group> Video</group>
        	<preview>widget/youtube.jpg</preview>
        </snm_editor>
        <parameters>
            <videoid>
                <label>YouTube Video ID</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>HXLEGOQRxOk</value>
            </videoid>
            <width>
                <label>Width</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>175</value>
            </width>
            <height>
                <label>Height</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>175</value>
            </height>
		</parameters>
    </auit_widget_youtube_direct>
    <auit_widget_vimeo type="auit_widget/vimeo_direct">
        <name>SNM-Portal: Vimeo Video</name>
        <description type="desc">Add vimeo video</description>
        <snm_editor>
        	<group> Video</group>
        	<preview>widget/vimeo.jpg</preview>
        </snm_editor>
        <parameters>
            <videoid>
                <label>Vimeo clip id</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>6004683</value>
            </videoid>
            <width>
                <label>Width</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>175</value>
            </width>
            <height>
                <label>Height</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>175</value>
            </height>
        	<show_portrait>
                <label>Intro Portrait</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
				<values>
                    <no translate="label">
                        <value>0</value>
                        <label>No</label>
                    </no>
                    <yes translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </yes>
                </values>
        	</show_portrait>
        	<show_title>
                <label>Intro Title</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
				<values>
                    <no translate="label">
                        <value>0</value>
                        <label>No</label>
                    </no>
                    <yes translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </yes>
                </values>
        	</show_title>
        	<show_byline>
                <label>Intro Byline</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
				<values>
                    <no translate="label">
                        <value>0</value>
                        <label>No</label>
                    </no>
                    <yes translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </yes>
                </values>
        	</show_byline>
            <color>
                 <label><![CDATA[Intro Color<br/><small>such as 00adef</small>]]></label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
                <value></value>
            </color>        	
		</parameters>
    </auit_widget_vimeo>    
    
    
    
    

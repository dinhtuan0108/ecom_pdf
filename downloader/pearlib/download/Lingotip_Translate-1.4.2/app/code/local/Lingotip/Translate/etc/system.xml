<config>
    
	<tabs>
     	<translate1 translate="label" module="translate">
            <label>LingoTip Extension</label>
            <sort_order>1</sort_order>
        </translate1>
    </tabs>
	<sections>
          <translate module="translate" translate="label">
            <label>LingoTip Translations</label> 
            <tab>translate1</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label" module="translate">
                    <label>General Settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                         <editable_areas translate="label">
                            <label>Editable Areas</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>translate/source_editableareas</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </editable_areas>
                        <editable_areas_custom translate="comment">
                            <label></label>
                            <frontend_model>lingotip_translate_block_textareas</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <comment>Use this button to specify the CSS IDs of additonal textareas that should use Translated Text.</comment>
                        </editable_areas_custom>
           
                    </fields>
                </general>
            </groups>
         </translate> 
     </sections> 

</config>
